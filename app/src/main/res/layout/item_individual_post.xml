<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/individual_reporter_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_user_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/individual_reporter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reporter Name"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/individual_post_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the description of the individual issue reported by the user."
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/individual_post_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 Oct 2025, 10:30 AM"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- === CORRECTED BUTTON CODE === -->
    <Button
        android:id="@+id/btnVerify"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Verify"
        android:backgroundTint="@color/prakriya_teal"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAllCaps="false"/>

</LinearLayout>
